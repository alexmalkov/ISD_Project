@model Lahjapaja_CIM.Models.customer

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Updata customer information</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.name, "Name")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.name)
            @Html.ValidationMessageFor(model => model.name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.status, "Status")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.status)
            @Html.ValidationMessageFor(model => model.status)
        </div>

        @Html.HiddenFor(model => model.customerId)

        <div class="editor-label">
            @Html.LabelFor(model => model.groupId, "Group ID")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.groupId)
            @Html.ValidationMessageFor(model => model.groupId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.visitingAddressId, "Visiting address")
        </div>
        <div class="editor-field">
            @Html.DropDownList("visitingAddressId", String.Empty)
            @Html.ValidationMessageFor(model => model.visitingAddressId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.postalAddressId, "Postal address")
        </div>
        <div class="editor-field">
            @Html.DropDownList("postalAddressId", String.Empty)
            @Html.ValidationMessageFor(model => model.postalAddressId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.contactPersonId, "Contact person")
        </div>
        <div class="editor-field">
            @Html.DropDownList("contactPersonId", String.Empty)
            @Html.ValidationMessageFor(model => model.contactPersonId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.contractId, "Contract ID")
        </div>
        <div class="editor-field">
            @Html.DropDownList("contractId", String.Empty)
            @Html.ValidationMessageFor(model => model.contractId)
        </div>

        

        <p>
            <input type="submit" value="Save" class="btn btn-success" style="margin-right:80px; padding-bottom:5px" />

            @Html.ActionLink("Cancel", "Index", "Customer", new {@class="btn btn-danger"})
        </p>
    </fieldset>
}
