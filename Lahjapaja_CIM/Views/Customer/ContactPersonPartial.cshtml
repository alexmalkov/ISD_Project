@model Lahjapaja_CIM.Models.contact_person

<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
    <fieldset class="span3" style="margin-left:0px">
    <div class="editor-label">
            @Html.LabelFor(model => model.fName, "First name")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.fName)
            @Html.ValidationMessageFor(model => model.fName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.lName, "Last name")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.lName)
            @Html.ValidationMessageFor(model => model.lName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.email, "E-mail address")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.email)
            @Html.ValidationMessageFor(model => model.email)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.phoneNo, "Phone number")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.phoneNo)
            @Html.ValidationMessageFor(model => model.phoneNo)
        </div>
</fieldset>

    <fieldset>
    @{
    Html.RenderPartial("AddressPartial");
        }</fieldset>
        
        

    </fieldset>
}
