@model Lahjapaja_CIM.Models.contract

<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>

        <div class="editor-label">
            @Html.LabelFor(model => model.creditLimit, "Credit limit")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.creditLimit)
            @Html.ValidationMessageFor(model => model.creditLimit)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.discountRate, "Discount rate")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.discountRate)
            @Html.ValidationMessageFor(model => model.discountRate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.paymentDisorderId, "Creditability code")
        </div>
        <div class="editor-field">
         @Html.DropDownList("cred_code", String.Empty)
            @Html.ValidationMessageFor(model => model.payment_disorder.creditabilityCode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.termOfPaymentId, "Number of days for payment")
        </div>
        <div class="editor-field">
            @Html.DropDownList("daysForPayment", String.Empty)
            @Html.ValidationMessageFor(model => model.term_of_payment.numberOfDaysForPayment)
        </div>

    </fieldset>
}

